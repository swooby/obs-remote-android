<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ButtonStyle">
        <item name="android:background">@drawable/buttonselector</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
                
        <item name="android:textSize">18sp</item> 
        <item name="android:textColor">@color/textgray</item> 
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="RemoteText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item> 
        <item name="android:textColor">@color/textgray</item> 
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="TextFieldStyle">
        
        <item name="android:textSize">20sp</item> 
        <item name="android:textColor">@android:color/black</item> 
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">monospace</item>
        
        <item name="android:paddingLeft">5dp</item>
                
        <item name="android:background">@color/textfieldgray</item> 
      
    </style>
    
    <style name="DialogBaseTheme" parent="android:Theme.Dialog"/>
    
    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>
    
</resources>
